<section class="phx-hero">
  <h3>Grow Room</h3>
</section>

<% measurements = get_measurements() %>

<section class="row">
  <article class="column">
    <h2>Resources</h2>
    <ul>
      <li><%= Timex.now("America/New_York") |> Timex.format!("%FT%T%:z", :strftime) %></li>
      <li>Temperature: <%= measurements.temperature %> F</li>
      <li>Humidity: <%= measurements.humidity %>%%</li>
      <li>Pressure: <%= measurements.preasure %> inHg</li>
    </ul>
  </article>
</section>
